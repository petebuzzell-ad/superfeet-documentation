<!-- Searchspring IntelliSuggest Tracking -->

<script type="text/javascript">
  try {
    var article_id = "blog-{{ article.id }}";
    IntelliSuggest.init({ siteId: window.Resources.searchspring.siteIds.contentFeeds.usEnglish, context: "Product/" + article_id, seed: article_id });

    {% if customer %}
      IntelliSuggest.setShopperId({{ customer.id }});
    {% endif %}

    IntelliSuggest.viewItem({ sku: article_id });
  } catch (err) { console.log("Searchspring Intellisuggest error: ", err); }
</script>