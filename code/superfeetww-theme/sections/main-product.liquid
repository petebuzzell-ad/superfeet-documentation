{% comment %} Enable more complex ajax product info updates - see VariantSelects in global.js {% endcomment %}
<script id="additionalVariantData" type="application/json">
  {
    "productId": "{{ product.id }}",
    "productUrl": "{{ shop.url }}{{ product.url }}",
    {% for variant in product.variants %}
      "{{ variant.id }}": {
        "options": {
          {% for option in product.options %}
          "{{ option }}": "{{ variant.options[forloop.index0] }}"{% unless forloop.index == product.options.size %},{% endunless %}
          {% endfor %}
        },
        "available": "{{ variant.available }}",
        "inventory": "{{ variant.inventory_quantity }}",
        "parentId": "{{ variant.product.id }}",
        "url": "{{ variant.url }}"
      }{% unless forloop.index == product.variants.size %},{% endunless %}
    {% endfor %}
  }
</script>

{%- capture product_labels -%}
  {% assign tag_count = 0 %}
    {%- for tag in product.tags -%}
      {% assign tag_count = tag_count | plus: 1 %}
        {%- if tag contains '__label' -%}
          <span class="ProductItem__Label">{{ tag | split: '__label:' | last }}</span>
          {% if tag_count >= 1 %}
            {% break %}
          {% endif %}
        {%- endif -%}
    {%- endfor -%}
{%- endcapture -%}

<section class="page-width">
  <div class="product product--{{ section.settings.media_size }} product--{{ section.settings.gallery_layout }} grid grid--1-col {% if product.media.size > 0 %}grid--1-col-tablet{% else %}product--no-media{% endif %}">
    <div class="grid__item product__media-wrapper">
      <media-gallery id="MediaGallery-{{ section.id }}" role="region" {% if section.settings.enable_sticky_info %}class="product__media-gallery"{% endif %} aria-label="{{ 'products.product.media.gallery_viewer' | t }}" data-desktop-layout="{{ section.settings.gallery_layout }}">
        <div id="GalleryStatus-{{ section.id }}" class="visually-hidden" role="status"></div>
          {%- liquid
            assign variant_images = product.images | where: 'attached_to_variant?', true | map: 'src'
            assign media_count = product.media.size
            if section.settings.hide_variants
              assign media_count = media_count | minus: variant_images.size | plus: 1
            endif

            if section.settings.media_size == 'large'
              assign media_width = 0.65
            elsif section.settings.media_size == 'medium'
              assign media_width = 0.55
            elsif section.settings.media_size == 'small'
              assign media_width = 0.45
            endif
          -%}

        <slider-component id="GalleryViewer-{{ section.id }}" class="slider-mobile-gutter{% if section.settings.gallery_layout == 'thumbnail_slider' and section.settings.carousel_layout == 'vertical' %} gallery-viewer--vertical{% endif %}">
          <a class="skip-to-content-link button visually-hidden" href="#ProductInfo-{{ section.id }}">
            {{ "accessibility.skip_to_product_info" | t }}
          </a>

          <div class="ProductItem__LabelList">
            {{ product_labels }}
          </div>

          {%- if product.metafields.cql.badge != blank %}
            <div class="product__media-badge">{{ product.metafields.cql.badge.value }}</div>
          {%- endif -%}
          <ul id="Slider-Gallery-{{ section.id }}" class="product__media-list grid grid--peek list-unstyled slider slider--mobile" role="list">
            {%- if product.selected_or_first_available_variant.featured_media != null -%}
              {%- assign featured_media = product.selected_or_first_available_variant.featured_media -%}
              <li id="Slide-{{ section.id }}-{{ featured_media.id }}" class="product__media-item grid__item slider__slide is-active{% if featured_media.media_type != 'image' %} product__media-item--full{% endif %}{% if section.settings.hide_variants and variant_images contains featured_media.src %} product__media-item--variant{% endif %}" data-media-id="{{ section.id }}-{{ featured_media.id }}">
                {%- assign media_position = 1 -%}
                {% render 'product-thumbnail', media: featured_media, position: media_position, loop: section.settings.enable_video_looping, modal_id: section.id, xr_button: true, media_width: media_width, image_border: section.settings.show_image_border %}
              </li>
            {%- endif -%}
            {%- for media in product.media -%}
              {%- unless media.id == product.selected_or_first_available_variant.featured_media.id -%}
                <li id="Slide-{{ section.id }}-{{ media.id }}" class="product__media-item grid__item slider__slide{% if product.selected_or_first_available_variant.featured_media == null and forloop.index == 1 %} is-active{% endif %}{% if media.media_type != 'image' %} product__media-item--full{% endif %}{% if section.settings.hide_variants and variant_images contains media.src %} product__media-item--variant{% endif %}" data-media-id="{{ section.id }}-{{ media.id }}">
                  {%- assign media_position = media_position | default: 0 | plus: 1 -%}
                  {% render 'product-thumbnail', media: media, position: media_position, loop: section.settings.enable_video_looping, modal_id: section.id, xr_button: true, media_width: media_width, image_border: section.settings.show_image_border %}
                </li>
              {%- endunless -%}
            {%- endfor -%}
          </ul>
          <div class="slider-buttons no-js-hidden{% if media_count < 2 or section.settings.mobile_thumbnails == 'show' %} small-hide{% endif %}">
            <button type="button" class="slider-button slider-button--prev" name="previous" aria-label="{{ 'general.slider.previous_slide' | t }}">{% render 'icon-caret' %}</button>
            <div class="slider-counter caption">
              <span class="slider-counter--current">1</span>
              <span aria-hidden="true"> / </span>
              <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
              <span class="slider-counter--total">{{ media_count }}</span>
            </div>
            <button type="button" class="slider-button slider-button--next" name="next" aria-label="{{ 'general.slider.next_slide' | t }}">{% render 'icon-caret' %}</button>
          </div>
        </slider-component>

        {%- if first_3d_model -%}
          <button
            class="button button--full-width product__xr-button"
            type="button"
            aria-label="{{ 'products.product.xr_button_label' | t }}"
            data-shopify-xr
            data-shopify-model3d-id="{{ first_3d_model.id }}"
            data-shopify-title="{{ product.title | escape }}"
            data-shopify-xr-hidden
          >
            {% render 'icon-3d-model' %}
            {{ 'products.product.xr_button' | t }}
          </button>
        {%- endif -%}
        {%- if media_count > 1 and section.settings.gallery_layout != 'stacked' or section.settings.mobile_thumbnails == 'show' -%}
          <slider-component id="GalleryThumbnails-{{ section.id }}" class="thumbnail-slider {% if section.settings.gallery_layout == 'thumbnail_slider' %}thumbnail-slider--{{ section.settings.carousel_layout }} {% endif %}slider-mobile-gutter{% if media_count <= 3 %} thumbnail-slider--no-slide{% endif %}">
            <button type="button" class="slider-button slider-button--prev{% if media_count <= 3 %} small-hide{% endif %}{% if media_count <= 4 %} medium-hide large-up-hide{% endif %}" name="previous" aria-label="{{ 'general.slider.previous_slide' | t }}" aria-controls="GalleryThumbnails-{{ section.id }}" data-step="2">{% render 'icon-caret' %}</button>
            <ul id="Slider-Thumbnails-{{ section.id }}" class="thumbnail-list list-unstyled slider slider--mobile{% if section.settings.gallery_layout == 'thumbnail_slider' %} slider--tablet-up slider--{{ section.settings.carousel_layout }}{% endif %}" data-orientation="{{ section.settings.carousel_layout }}">
              {%- if featured_media != null -%}
                {%- capture media_index -%}
                  {%- if featured_media.media_type == 'model' -%}{%- increment model_index -%}
                  {%- elsif featured_media.media_type == 'video' or featured_media.media_type == 'external_video' -%}{%- increment video_index -%}
                  {%- elsif featured_media.media_type == 'image'%}{%- increment image_index -%}
                  {%- endif -%}
                {%- endcapture -%}
                {%- assign media_index = media_index | plus: 1 -%}
                <li id="Slide-Thumbnails-{{ section.id }}-0" class="thumbnail-list__item slider__slide{% if section.settings.hide_variants and variant_images contains featured_media.src %} thumbnail-list_item--variant{% endif %}" data-target="{{ section.id }}-{{ featured_media.id }}" data-media-position="{{ media_index }}">
                  <button class="thumbnail {% if featured_media.preview_image.aspect_ratio > 1 %}thumbnail--wide{% else %}thumbnail--narrow{% endif %}"
                    aria-label="{%- if featured_media.media_type == 'image' -%}{{ 'products.product.media.load_image' | t: index: media_index }}{%- elsif featured_media.media_type == 'model' -%}{{ 'products.product.media.load_model' | t: index: media_index }}{%- elsif featured_media.media_type == 'video' or featured_media.media_type == 'external_video' -%}{{ 'products.product.media.load_video' | t: index: media_index }}{%- endif -%}"
                    aria-current="true"
                    aria-controls="GalleryViewer-{{ section.id }}"
                    aria-describedby="Thumbnail-{{ section.id }}-0"
                  >
                    <img id="Thumbnail-{{ section.id }}-0" srcset="{% if featured_media.preview_image.width >= 54 %}{{ featured_media.preview_image | img_url: '54x' }} 54w,{% endif %}
                      {% if featured_media.preview_image.width >= 74 %}{{ featured_media.preview_image | img_url: '74x' }} 74w,{% endif %}
                      {% if featured_media.preview_image.width >= 104 %}{{ featured_media.preview_image | img_url: '104x' }} 104w,{% endif %}
                      {% if featured_media.preview_image.width >= 162 %}{{ featured_media.preview_image | img_url: '162x' }} 162w,{% endif %}
                      {% if featured_media.preview_image.width >= 208 %}{{ featured_media.preview_image | img_url: '208x' }} 208w,{% endif %}
                      {% if featured_media.preview_image.width >= 324 %}{{ featured_media.preview_image | img_url: '324x' }} 324w,{% endif %}
                      {% if featured_media.preview_image.width >= 416 %}{{ featured_media.preview_image | img_url: '416x' }} 416w,{% endif %},
                      {{ featured_media.preview_image | img_url: 'master' }} {{ media.preview_image.width }}w"
                      src="{{ featured_media | img_url: '416x' }}"
                      sizes="(min-width: {{ settings.page_width }}px) calc(({{ settings.page_width | minus: 100 | times: media_width | round }} - 4rem) / 4), (min-width: 990px) calc(({{ media_width | times: 100 }}vw - 4rem) / 4), (min-width: 750px) calc((100vw - 15rem) / 8), calc((100vw - 14rem) / 3)"
                      alt="{{ featured_media.alt | escape }}"
                      height="208"
                      width="208"
                      loading="lazy"
                    >
                  </button>
                </li>
              {%- endif -%}
              {%- for media in product.media -%}
                {%- unless media.id == product.selected_or_first_available_variant.featured_media.id -%}
                  {%- capture media_index -%}
                    {%- if media.media_type == 'model' -%}{%- increment model_index -%}
                    {%- elsif media.media_type == 'video' or media.media_type == 'external_video' -%}{%- increment video_index -%}
                    {%- elsif media.media_type == 'image'%}{%- increment image_index -%}
                    {%- endif -%}
                  {%- endcapture -%}
                  {%- assign media_index = media_index | plus: 1 -%}
                   <li id="Slide-Thumbnails-{{ section.id }}-{{ forloop.index }}" class="thumbnail-list__item slider__slide{% if section.settings.hide_variants and variant_images contains media.src %} thumbnail-list_item--variant{% endif %}" data-target="{{ section.id }}-{{ media.id }}"  data-media-position="{{ media_index }}">
                    <button class="thumbnail {% if media.preview_image.aspect_ratio > 1 %}thumbnail--wide{% else %}thumbnail--narrow{% endif %}"
                      aria-label="{%- if media.media_type == 'image' -%}{{ 'products.product.media.load_image' | t: index: media_index }}{%- elsif media.media_type == 'model' -%}{{ 'products.product.media.load_model' | t: index: media_index }}{%- elsif media.media_type == 'video' or media.media_type == 'external_video' -%}{{ 'products.product.media.load_video' | t: index: media_index }}{%- endif -%}"
                      {% if media == product.selected_or_first_available_variant.featured_media or product.selected_or_first_available_variant.featured_media == null and forloop.index == 1 %} aria-current="true"{% endif %}
                      aria-controls="GalleryViewer-{{ section.id }}"
                      aria-describedby="Thumbnail-{{ section.id }}-{{ forloop.index }}"
                    >
                      {%- if media.media_type == 'model' -%}
                        <span class="thumbnail__badge" aria-hidden="true">
                          {%- render 'icon-3d-model' -%}
                        </span>
                      {%- elsif media.media_type == 'video' or media.media_type == 'external_video' -%}
                        <span class="thumbnail__badge" aria-hidden="true">
                          {%- render 'icon-play' -%}
                        </span>
                      {%- endif -%}
                      <img id="Thumbnail-{{ section.id }}-{{ forloop.index }}"
                        srcset="{% if media.preview_image.width >= 59 %}{{ media.preview_image | img_url: '59x' }} 59x,{% endif %}
                                {% if media.preview_image.width >= 118 %}{{ media.preview_image | img_url: '118x' }} 118w,{% endif %}
                                {% if media.preview_image.width >= 84 %}{{ media.preview_image | img_url: '84x' }} 84w,{% endif %}
                                {% if media.preview_image.width >= 168 %}{{ media.preview_image | img_url: '168x' }} 168w,{% endif %}
                                {% if media.preview_image.width >= 130 %}{{ media.preview_image | img_url: '130x' }} 130w,{% endif %}
                                {% if media.preview_image.width >= 260 %}{{ media.preview_image | img_url: '260x' }} 260w{% endif %}"
                        src="{{ media | img_url: '84x84' }}"
                        sizes="(min-width: 1200px) calc((1200px - 19.5rem) / 12), (min-width: 750px) calc((100vw - 16.5rem) / 8), calc((100vw - 8rem) / 5)"
                        alt="{{ media.alt | escape }}"
                        height="200"
                        width="200"
                        loading="lazy"
                      >
                    </button>
                  </li>
                {%- endunless -%}
              {%- endfor -%}
            </ul>
            <button type="button" class="slider-button slider-button--next{% if media_count <= 3 %} small-hide{% endif %}{% if media_count <= 4 %} medium-hide large-up-hide{% endif %}" name="next" aria-label="{{ 'general.slider.next_slide' | t }}" aria-controls="GalleryThumbnails-{{ section.id }}" data-step="2">{% render 'icon-caret' %}</button>
          </slider-component>
        {%- endif -%}
      </media-gallery>
    </div>
    <div class="product__info-wrapper grid__item {% if product.metafields.rc_bundles.layout_template != blank %}product__info-wrapper-bundle{% endif %}">
      <div id="ProductInfo-{{ section.id }}" class="product__info-container{% if section.settings.enable_sticky_info %} product__info-container--sticky{% endif %}">
        {%- assign product_form_id = 'product-form-' | append: section.id -%}

        {%- for block in section.blocks -%}
          {%- case block.type -%}
          {%- when '@app' -%}
            {% render block %}
          {%- when 'text' -%}
             <p class="product__text pdp__eyebrow {% if product.metafields.rc_bundles.layout_template != blank %}product__text-bundle{% endif %}" {{ block.shopify_attributes }}>
              {{- block.settings.text -}}
             </p>
          {%- when 'metafield' -%}
            {% if block.settings.metafield != blank %}
            <p class="body-small">
              <span class="label" style="font-weight: {{ block.settings.label_weight }}">{{ block.settings.label }}:</span>
              <span class="metafield">{{ block.settings.metafield }}</span>
            </p>
            {% endif %}
          {%- when 'featured_description' -%}
           {% if block.settings.featured_description != blank %}
             <div class="pdp__featured_description">
               {{ block.settings.featured_description }}
             </div>
           {% endif %}
          {%- when 'title' -%}
            <h1 tabindex="0" class="product__title headline-alt headline-alt-medium" {{ block.shopify_attributes }}>
              {{ product.title | escape }}
            </h1>
          {%- when 'price' -%}
            <div class="no-js-hidden product__price-wrapper" id="price-{{ section.id }}" role="status" {{ block.shopify_attributes }}>
              {%- render 'price', product: product, use_variant: true, show_badges: false, price_class: 'price--large' -%}

              {% if block.settings.price_messaging %}
                {% assign price_messaging = "products.product.price.messaging" | t %}

                {% if price_messaging != blank %}
                  <span class="product__price-messaging">{{ 'products.product.price.messaging' | t }}</span>
                {% endif %}
              {% endif %}
            </div>
            {% if localization.country.iso_code == "US" and block.settings.shipping_callout %}
              {% assign callout = "products.product.price.callout" | t %}

              {% if callout != blank %}
                <div class="product__price-callout">
                  {{ callout }}
                </div>
              {% endif %}
            {% endif %}
            {%- if shop.taxes_included or shop.shipping_policy.body != blank -%}
              <div class="product__tax caption rte">
                {%- if shop.taxes_included -%}
                  {{ 'products.product.include_taxes' | t }}
                {%- endif -%}
              </div>
            {%- endif -%}
            <div style="display:none" {{ block.shopify_attributes }}>
              {%- form 'product', product, data-productid: product.id, id: 'product-form-installment', class: 'installment caption-large' -%}
                <input type="hidden" name="id" data-productid="{{ product.id }}" value="{{ product.selected_variant.id }}">
                {{ form | payment_terms }}
              {%- endform -%}
            </div>
          {%- when 'short_description' -%}
            {%- if product.metafields.cql.short_description != blank -%}
              {% if product.metafields.rc_bundles.layout_template != blank %}
                <div class="product__description rte {% if product.metafields.rc_bundles.layout_template != blank %}bundle-product-description{% endif %}">
                  {% assign individualBundleProducts =  product.metafields.cql.short_description | split: ", " %}
                  <p class="bundle-label-includes">Includes:</p>
                  <ul class="bundle-products-list">
                    {% for individualBundleProduct in individualBundleProducts %}
                      <li>{{ individualBundleProduct }}</li>
                    {% endfor %}
                  </ul>
                </div>
              {% else %}
                <div class="product__description rte">
                  {{product.metafields.cql.short_description}}
                </div>
              {% endif %}
            {%- endif -%}
          {%- when 'custom_liquid' -%}
            {{ block.settings.custom_liquid }}
          {%- when 'low_stock_message' -%}
            <div
              id="low-stock-message"
              data-threshold="{{product.metafields.cql.low_stock_threshold}}"
              {%- if sofa_variant.inventory_quantity >= product.metafields.cql.low_stock_threshold or sofa_variant.inventory_management == blank -%}
              style="display:none;"
              {%- endif -%}
              class="body-small">
              {{block.settings.message}}
            </div>
          {%- when 'product_description' -%}
            <div class="product__description rte">
              {{ product.description }}
            </div>
          {%- when 'inline_icon_links' -%}
            {% if block.settings.link_1_url or block.settings.link_2_url or block.settings.link_3_url  %}
              <div class="inline_icon_links">
                  {% if block.settings.link_1_url != blank %}
                    <a class="icon_link" href="{{ block.settings.link_1_url}}">
                      <span class="icon_link-img-wrapper">
                        {% assign image_alt = block.settings.link_1_icon.alt | default: shop.name %}
                        {% render 'image', image: block.settings.link_1_icon, alt: image_alt %}
                      </span>
                      <span class="icon_link_text">{{ block.settings.link_1_text}}</span>
                    </a>
                  {% endif %}

                  {% if block.settings.link_2_url != blank %}
                    <a class="icon_link" href="{{ block.settings.link_2_url}}">
                      <span class="icon_link-img-wrapper">
                        {% assign image_alt = block.settings.link_2_icon.alt | default: shop.name %}
                        {% render 'image', image: block.settings.link_2_icon, alt: image_alt %}
                      </span>
                      <span class="icon_link_text">{{ block.settings.link_2_text}}</span>
                    </a>
                  {% endif %}

                  {% if block.settings.link_3_url != blank %}
                    <a class="icon_link" href="{{ block.settings.link_3_url}}">
                      <span class="icon_link-img-wrapper">
                        {% assign image_alt = block.settings.link_3_icon.alt | default: shop.name %}
                        {% render 'image', image: block.settings.link_3_icon, alt: image_alt %}
                      </span>
                      <span class="icon_link_text">{{ block.settings.link_3_text}}</span>
                    </a>
                  {% endif %}
              </div>
            {% endif %}
          {%- when 'icon_data_rows' -%}
            <div class="icon-data-rows">
              <style type="text/css">
                .icon-data-row.thickness.thin .data-icon {
                  background-image: url({{ shop.metaobjects.thickness_icons.thin.thickness_icon | img_url }});
                }

                .icon-data-row.thickness.mid .data-icon {
                  background-image: url({{ shop.metaobjects.thickness_icons.medium.thickness_icon | img_url }});
                }

                .icon-data-row.thickness.max .data-icon {
                  background-image: url({{ shop.metaobjects.thickness_icons.thick.thickness_icon | img_url }});
                }

                .icon-data-row.cushion.firm .data-icon {
                  background-image: url({{ shop.metaobjects.cushion_icons.hard.cushion_icon | img_url }});
                }

                .icon-data-row.cushion.semi-firm .data-icon,
                .icon-data-row.cushion.mid .data-icon {
                  background-image: url({{ shop.metaobjects.cushion_icons.medium.cushion_icon | img_url }});
                }

                .icon-data-row.cushion.soft .data-icon {
                  background-image: url({{ shop.metaobjects.cushion_icons.soft.cushion_icon | img_url }});
                }

                .icon-data-row.arch-height.all .data-icon {
                  background-image: url({{ shop.metaobjects.arch_height_icons.all.arch_height_icon | img_url }});
                }

                .icon-data-row.arch-height.low .data-icon {
                  background-image: url({{ shop.metaobjects.arch_height_icons.low.arch_height_icon | img_url }});
                }

                .icon-data-row.arch-height.medium .data-icon,
                .icon-data-row.arch-height.mid .data-icon {
                  background-image: url({{ shop.metaobjects.arch_height_icons.mid.arch_height_icon | img_url }});
                }

                .icon-data-row.arch-height.high .data-icon {
                  background-image: url({{ shop.metaobjects.arch_height_icons.high.arch_height_icon | img_url }});
                }

                .icon-data-row.arch-height.medium.high .data-icon {
                  background-image: url({{ shop.metaobjects.arch_height_icons.mid-high.arch_height_icon | img_url }});
                }
                
                .icon-data-row.arch-height.low.medium.high .data-icon {
                  background-image: url({{ shop.metaobjects.arch_height_icons.all.arch_height_icon | img_url }});
                }

              </style>
              <div class="icon-data-row arch-height {{product.metafields.cql.arch_height | downcase | split: '/' | join: ' '}}">
                <span class="data-icon"></span>
                <span class="eyebrow eyebrow--small">Arch Height</span>
                <span class="body-small">{{product.metafields.cql.arch_height}}</span>
              </div>
              <div class="icon-data-row thickness {{product.metafields.cql.insole_thickness | downcase | split: '/'}}">
                <span class="data-icon"></span>
                <span class="eyebrow eyebrow--small">Thickness</span>
                <span class="body-small">{{product.metafields.cql.insole_thickness}}</span>
              </div>
