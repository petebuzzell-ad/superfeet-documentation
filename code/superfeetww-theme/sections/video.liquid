<section id="section-{{ section.id }}" data-section-id="{{ section.id }}"
  class="video__wrapper
  {% if settings.scroll_appear == "fadein" %} fadeIn {% endif %}
  {% if section.settings.image_hover == 'easein' %} hoverAnimation {% endif %}
  {% if section.settings.background_video %} background-video{% endif %}"
  {% if section.settings.background_color != 'rgba(0,0,0,0)' %}
    style="background-color: {{ section.settings.background_color }};"
  {% endif %}
  >

  {% if section.settings.overlay_color != 'rgba(0,0,0,0)' and section.settings.background_video %}
    {% assign backgroundOpacity = section.settings.overlay_opacity | divided_by: 100.00 %}
    <div class="video__overlay video__overlay--desktop small-hide medium-hide" style="background: {{ section.settings.overlay_color }}; background: {{ section.settings.overlay_color | color_to_rgb | color_modify: 'alpha', backgroundOpacity }};
    {% if section.settings.desktop_cover_image != blank %} padding-bottom: {{ 1 | divided_by: section.settings.desktop_cover_image.aspect_ratio | times: 100 }}%;{% endif %}">
    </div>
    <div class="video__overlay video__overlay--mobile large-up-hide" style="background: {{ section.settings.overlay_color }}; background: {{ section.settings.overlay_color | color_to_rgb | color_modify: 'alpha', backgroundOpacity }};
    {% if section.settings.mobile_cover_image != blank %} padding-bottom: {{ 1 | divided_by: section.settings.mobile_cover_image.aspect_ratio | times: 100 }}%;{% endif %}">
    </div>
  {% endif %}

  <div class="video__heading page-width
    {% if section.settings.title == blank %} title-wrapper-with-link--no-heading{% endif %} 
    {% if section.settings.background_video %}
      video__heading--{{ section.settings.desktop_content_position }}
      video__heading-content-align--{{ section.settings.desktop_content_alignment }}
      video__heading-mobile--{{ section.settings.mobile_content_position }}
      video__heading-content-align-mobile--{{ section.settings.mobile_content_alignment }}
    {% endif %}
    "
  >
    {% render 'eyebrow', text: section.settings.eyebrow, text_style: section.settings.eyebrow_style, text_color: section.settings.text_color, class: "video__eyebrow" %}

    {% render 'headline', text: section.settings.headline , text_style: section.settings.headline_style, text_color: section.settings.text_color, class: "video__title"%}

    {% render 'description', text: section.settings.description, text_style: section.settings.description_style, text_color: section.settings.text_color, class: "video__description"%}

    {%- if section.settings.button_label != blank and section.settings.button_link != blank -%}
      {% render 'button',
        label: section.settings.button_label,
        link: section.settings.button_link,
        variation: section.settings.button_style_desktop,
        ariaLabel: section.settings.button_aria_label,
        class: 'small-hide medium-hide'
      %}
      {% render 'button',
        label: section.settings.button_label,
        link: section.settings.button_link,
        variation: section.settings.button_style_mobile,
        ariaLabel: section.settings.button_aria_label,
        class: 'large-up-hide'
      %}
    {%- endif -%}
  </div>

  {%- if section.settings.background_video -%}
    {% render 'video-background' %}
  {%- elsif section.settings.enable_modal -%}
    {% render 'video-modal' %}
  {%- else -%}
    {% render 'video-player' %}
  {%- endif -%}
</section>

{%- if section.settings.background_video == false -%}
{% assign section_selector = '#shopify-section-' | append: section.id %}
{% style %}
  @media screen and (max-width: 750px) {
    {{ section_selector }} .video__wrapper {
      padding-top: {{ section.settings.mobile_top_padding }}px;
      padding-right: {{ section.settings.mobile_right_padding }}px;
      padding-bottom: {{ section.settings.mobile_bottom_padding }}px;
      padding-left: {{ section.settings.mobile_left_padding }}px;
    }
  }

  @media screen and (min-width: 749px) {
    {{ section_selector }} .video__wrapper {
      padding-top: {{ section.settings.desktop_top_padding }}px;
      padding-right: {{ section.settings.desktop_right_padding }}px;
      padding-bottom: {{ section.settings.desktop_bottom_padding }}px;
      padding-left: {{ section.settings.desktop_left_padding }}px;
    }
  }
{% endstyle %}
{%- endif -%}

{% style %}
  {% if section.settings.links_color_override %}
    {{ section_selector }} .video__heading .button {
      color: {{ section.settings.links_color }}!important;
    }
  {% endif %}
{% endstyle %}


