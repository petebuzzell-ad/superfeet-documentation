                        calc((100vw - {{ grid_space_mobile }}) * {{ image_width }} / {{ number_of_columns_mobile }})
                      {% endcapture %}
                      {{
                        block.settings.image
                        | image_url: width: 3200
                        | image_tag:
                          loading: 'lazy',
                          widths: '50, 75, 100, 150, 200, 300, 400, 500, 750, 1000, 1250, 1500, 1750, 2000, 2250, 2500, 2750, 3000, 3200',
                          sizes: sizes,
                          class: 'multicolumn-card__image'
                      }}
                    </div>
                  </div>
                {% endif %}
              {%- endif -%}
              <div class="multicolumn-card__info multicolumn-card__info--{{ section.settings.image_width }}-image">
                {%- if block.settings.eyebrow != blank %}
                  <div class="multicolumn-card__info--eyebrow {{ block.settings.eyebrow_style }}">{{ block.settings.eyebrow }}</div>
                {%- endif -%}
                {%- if block.settings.title != blank -%}
                  <h3 class="inline-richtext {{ block.settings.heading_size_mobile }} large-up-hide">{{ block.settings.title }}</h3>
                  <h3 class="inline-richtext {{ block.settings.heading_size_desktop }} small-hide medium-hide">{{ block.settings.title }}</h3>
