{% comment %}theme-check-disable{% endcomment %}
{%- layout none -%}
{%- paginate pages by 1000 -%}
{% for page in pages %}{% if page.metafields.seo.hidden.value != 1 %}{"pageType":"page","id":{{ "page-" | append: page.id | json }},"title":"{{ page.metafields.french.page_title }}","author":{{ page.author | json }},"url":{{ page.url | json }},"published_at":"{{ page.published_at }}","content":"{{ page.metafields.french.excerpt | strip_newlines | strip_html | truncate: 125 }}","metafieldFeaturedImage":"{% if page.metafields.cql.featured_image.value != blank %}{{ page.metafields.cql.featured_image | image_url }}{% endif %}"}{% endif %}
{% endfor %}{%- endpaginate -%}{%- assign blogTypes = 'company-news,foot-health-podiatry,health-wellness,hiking-outdoor,running,technology,travel,snow,healthcare-professionals' | split: ',' -%}
{% for type in blogTypes %}{%- paginate blogs[type].articles by 1000 -%}
{%- for article in blogs[type].articles | sort: "published_at" | reverse -%}{"pageType":"blog", "type":{{ type | json }}, "id":{{ "blog-" | append: article.id | json }},"title":"{{ article.metafields.french.title }}","author":{{ article.author | json }},"url":{{ article.url | json }},"published_at":"{{ article.published_at }}","image": "{{ article.image.src | img_url: 'master' }}","blogFeaturedImgMetafield":"{% if article.metafields.cql.featured_image.value != blank %}{{ article.metafields.cql.featured_image.value | file_url }}{% endif %}","content":"{{ article.metafields.french.excerpt | strip_html | truncate: 125 }}","metafieldFrenchBlogType":"{{ article.metafields.french.type }}", "tags": ["blog-tag"{% if article.tags.size > 0 %},{% endif %}{%- for tag in article.tags -%}"{{tag}}"{%- unless forloop.last -%},{%- endunless -%}{%- endfor -%}]}
{% endfor %}{%- endpaginate -%}{%- endfor -%}
{% comment %}theme-check-enable{% endcomment %}